<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Purple to black gradient -->
    <gradient
        android:startColor="#0F0F23"
        android:centerColor="#16213E"
        android:endColor="#1A1A1A"
        android:type="linear"
        android:angle="315"/>

    <!-- Smooth rounded corners -->
    <corners android:radius="22dp" />

    <!-- Subtle highlight stroke -->
    <stroke
        android:width="0.8dp"
        android:color="#8C52FF" />

    <!-- Minimal padding -->
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />
</shape>