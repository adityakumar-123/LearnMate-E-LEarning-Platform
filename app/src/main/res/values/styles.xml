<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base theme for Light Mode -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/greenColor</item>
        <item name="colorPrimaryVariant">@color/greenColor</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/redColor</item>
        <item name="colorSecondaryVariant">@color/redColor</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background and Surface Colors -->
        <item name="android:windowBackground">@color/background</item> <!-- Light background -->
        <item name="colorSurface">@color/white</item> <!-- Light surface -->

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>

        <!-- Focus and Highlight Colors -->
        <item name="colorControlHighlight">@color/focusPressedColor</item>
    </style>

    <style name="welcome_back">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>
