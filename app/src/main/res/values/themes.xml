<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base theme for Light Mode -->
    <style name="Theme.App.Light" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/greenColor</item>
        <item name="colorPrimaryVariant">@color/greenColor</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/redColor</item>
        <item name="colorSecondaryVariant">@color/redColor</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background and Surface -->
        <item name="android:windowBackground">@color/background</item>
        <item name="colorSurface">@color/white</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>

        <!-- Focus -->
        <item name="colorControlHighlight">@color/focusPressedColor</item>

        <!-- Add these for transparent status and nav bars -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Optional: control layout overlap with status bar -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

</resources>
