<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- App Bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        app:title="Python Developer Roadmap"
        app:titleTextColor="#FFFFFF"/>

    <!-- Title with Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Python Developer Roadmap"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/gradient_background"/>
    </androidx.cardview.widget.CardView>

    <!-- Intro Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Follow this roadmap to master Python development"
        android:textSize="16sp"
        android:textColor="#7C4DFF"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"/>

    <!-- Expandable List with Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <ExpandableListView
            android:id="@+id/roadmapExpandableList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="0.5dp"
            android:childDivider="@color/black"
            android:groupIndicator="@drawable/group_indicator"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>